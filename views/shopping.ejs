<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>HyperGear</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f4f4f4;
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      background: linear-gradient(90deg, #000 0%, #1f1f1f 100%);
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 1.8rem;
      letter-spacing: 1px;
      color: #ffcc00 !important;
    }

    .nav-link {
      color: #ffffff !important;
    }

    .nav-link:hover {
      color: #ffcc00 !important;
    }

    .card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border: none;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
      object-fit: cover;
      height: 220px;
      background-color: #fff;
      border-bottom: 1px solid #eee;
    }

    .card-title a {
      color: #1a1a1a;
    }

    .product-actions {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn-primary {
      background-color: #ffcc00;
      border: none;
      color: #000;
    }

    .btn-outline-primary {
      border-color: #ffcc00;
      color: #000;
    }

    .btn-primary:hover,
    .btn-outline-primary:hover {
      background-color: #000;
      color: #ffcc00;
    }

    .category-badge {
      background-color: #ffcc00;
      color: #000;
      font-size: 0.75rem;
      padding: 2px 6px;
      border-radius: 4px;
      text-transform: uppercase;
    }

    footer {
      background-color: #1f1f1f;
      color: #aaa;
      text-align: center;
      padding: 15px 0;
      margin-top: 50px;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark shadow">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">HyperGear</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mx-auto">
        <% const categories = [
            { name: 'Equipment', items: ['Balls', 'Bats', 'Gloves'] },
            { name: 'Men', items: ['Shirts', 'Shorts', 'Shoes'] },
            { name: 'Women', items: ['Tops', 'Leggings', 'Shoes'] },
            { name: 'Kids', items: ['Boys', 'Girls'] },
            { name: 'Brands', items: ['Nike', 'Adidas', 'Puma'] }
        ]; %>
        <% categories.forEach(cat => { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= cat.name %>
            </a>
            <ul class="dropdown-menu">
              <% cat.items.forEach(item => { %>
                <li><a class="dropdown-item" href="/category/<%= cat.name.toLowerCase() %>/<%= item.toLowerCase() %>"><%= item %></a></li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/cart">ðŸ›’ Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Content -->
<div class="container my-5">
  <div class="text-end small text-muted mb-2">Welcome, <%= user.username %> (<%= user.role %>)</div>
  <h2 class="text-center mb-4 text-dark">ðŸ”¥ Shop Your Gear ðŸ”¥</h2>

  <!-- Product Grid -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% products.forEach(product => { %>
      <div class="col">
        <div class="card h-100">
          <img src="images/<%= product.image %>" class="card-img-top p-3" alt="<%= product.productName %>">
          <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
              <h5 class="card-title"><a href="/product/<%= product.idProducts %>" class="text-decoration-none"><%= product.productName %></a></h5>
              <span class="category-badge">Hot</span>
            </div>
            <p class="card-text"><strong>Branch:</strong> <%= product.quantity %></p>
            <p class="card-text"><strong>Price:</strong> $<%= Number(product.price).toFixed(2) %></p>
            <form action="/add-to-cart/<%= product.idProducts %>" method="POST">
              <div class="mb-2">
                <label class="form-label">Qty:</label>
                <select class="form-select form-select-sm" name="quantity">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </div>
              <div class="product-actions">
                <button type="submit" class="btn btn-sm btn-primary w-100">Buy</button>
              </div>
            </form>
            <form action="/add-to-cart/<%= product.idProducts %>" method="POST">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="btn btn-sm btn-outline-primary w-100 mt-2">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Footer -->
<footer>
  <p>&copy; 2025 HyperGear. All rights reserved.</p>
</footer>

</body>
</html>
