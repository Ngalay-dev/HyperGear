<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HyperGear</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }
    .card img {
      object-fit: contain;
      height: 200px;
    }
    .product-actions {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
  </style>
</head>
<body>

<!--  Modern Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">HyperGear</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mx-auto">
        <!-- Categories -->
        <% const categories = [
            { name: 'Equipment', items: ['Balls', 'Bats', 'Gloves'] },
            { name: 'Men', items: ['Shirts', 'Shorts', 'Shoes'] },
            { name: 'Women', items: ['Tops', 'Leggings', 'Shoes'] },
            { name: 'Kids', items: ['Boys', 'Girls'] },
            { name: 'Brands', items: ['Nike', 'Adidas', 'Puma'] }
          ];
        %>
        <% categories.forEach(cat => { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= cat.name %>
            </a>
            <ul class="dropdown-menu">
              <% cat.items.forEach(item => { %>
                <li><a class="dropdown-item" href="/category/<%= cat.name.toLowerCase() %>/<%= item.toLowerCase() %>"><%= item %></a></li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/cart">ðŸ›’ Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!--  Main Content -->
<div class="container my-5">
  <div class="text-end small text-muted mb-2">Welcome, <%= user.username %> (<%= user.role %>)</div>
  <h2 class="text-center mb-4">ðŸ”¥ Shop Now ðŸ”¥</h2>

  <!--  Product Cards -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% products.forEach(product => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="images/<%= product.image %>" class="card-img-top p-3" alt="<%= product.productName %>">
          <div class="card-body">
            <h5 class="card-title text-primary"><a href="/product/<%= product.idProducts %>" class="text-decoration-none"><%= product.productName %></a></h5>
            <p class="card-text mb-1"><strong>Branch:</strong> <%= product.quantity %></p>
            <p class="card-text mb-1"><strong>Price:</strong> $<%= Number(product.price).toFixed(2) %></p>
            <form action="/add-to-cart/<%= product.idProducts %>" method="POST">
              <div class="mb-2">
                <label class="form-label">Qty:</label>
                <select class="form-select form-select-sm" name="quantity">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </div>
              <div class="product-actions">
                <button type="submit" class="btn btn-sm btn-primary w-100">Buy</button>
              </div>
            </form>
            <form action="/add-to-cart/<%= product.idProducts %>" method="POST">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="btn btn-sm btn-outline-primary w-100 mt-2">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>
