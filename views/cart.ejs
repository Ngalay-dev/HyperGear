<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">HyperGear App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
              <td><%= cart[i].productName %></td>
              <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>

              <!-- Quantity Controls -->
              <td class="text-center">
                <div class="d-flex justify-content-center align-items-center">
                  
                  <!-- MINUS BUTTON -->
                  <form action="/cart/decrease/<%= cart[i].idProducts %>" method="POST" 
                        onsubmit="return <%= cart[i].quantity === 1 ? 'confirm(\'Quantity is 1. Remove this item from the cart?\')' : 'true' %>" 
                        style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">-</button>
                  </form>

                  <!-- Quantity Display -->
                  <span class="mx-2"><%= cart[i].quantity %></span>

                  <!-- PLUS BUTTON -->
                  <form action="/cart/increase/<%= cart[i].idProducts %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-success btn-sm">+</button>
                  </form>
                </div>
              </td>

              <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
        <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
      </div>
    <% } %>
  </div>
</body>
</html>
